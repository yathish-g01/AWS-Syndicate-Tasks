    "deploy_stage": "api",
    "authorizers": {
      "authorizer": {
        "type": "COGNITO_USER_POOLS",
        "identity_source": "method.request.header.Authorization",
        "user_pools": [
          "simple-booking-userpool"
        ],
        "ttl": 300
      }
    },
    "resources": {
      "/signup": {
        "enable_cors": false,
        "POST": {
          "enable_proxy": true,
